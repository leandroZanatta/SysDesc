<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd  http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
	<changeSet id="20191006_141602" author="Leandro Zanatta">

		<preConditions onFail="CONTINUE">
			<not>
				<tableExists tableName="tb_modulopdv" />
			</not>
		</preConditions>

		<createTable tableName="tb_modulopdv">

			<column name="id_modulopdv" type="NUMBER(18,0)" remarks="CÓDIGO DO MÓDULO">
				<constraints primaryKey="true" primaryKeyName="modulopdv_pk" nullable="false" />
			</column>

			<column name="tx_descricao" type="VARCHAR(100)" remarks="DESCRIÇÃO DO MÓDULO">
				<constraints nullable="false" />
			</column>

			<column name="fl_desacoplar" type="VARCHAR(1)" remarks="PERMITE DESACOPLAR MÓDULO(S/N)">
				<constraints nullable="false" />
			</column>
			
			<column name="fl_possuiporta" type="VARCHAR(1)" remarks="MÓDULO NECESSITA CONFIGURAR PORTA(S/N)">
				<constraints nullable="false" />
			</column>
			
			<column name="nr_portapadrao" type="NUMBER(18,0)" remarks="PORTA PADRÃO">
				<constraints nullable="true" />
			</column>

		</createTable>


	</changeSet>
</databaseChangeLog>
